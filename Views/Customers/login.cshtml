@model MiniProject.Models.Customers

@{
    ViewData["Title"] = "login";
}
<h1>login</h1>
<h4>Customers</h4>
<hr />
@{
    var message = TempData["Msg"]?.ToString();
}

@if (!string.IsNullOrEmpty(message))
{
    @if (message == "Login Failed, Invalid Credentials")
    {
        <div class="alert alert-danger">
            @message
        </div>
    }
    @if (message == "Login Success")
    {
        <div class="alert alert-success">
            @message
        </div>
    }
}
<div class="row">
    <div class="col-md-4">
        
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-check">
                <input asp-for="isRemember" class="form-check-input" type="checkbox" />
                <label asp-for="isRemember" class="form-check-label">Remember Me</label>
                <span asp-validation-for="isRemember" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Register">New User</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
